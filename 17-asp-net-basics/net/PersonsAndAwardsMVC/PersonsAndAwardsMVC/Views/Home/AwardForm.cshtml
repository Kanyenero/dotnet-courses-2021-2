@model PersonsAndAwardsMVC.Models.AwardViewModel

@{
    ViewData["Title"] = "Add/Edit Award";
    string task = ViewData["task"] as string;
}

@using (Html.BeginForm("AwardForm", "Home", new { task = task }, FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="container">

        @if (task == "add")
        {
            <h2>Add New Award</h2>
        }
        @if (task == "edit")
        {
            <h2>Edit Selected Award</h2>
        }

        <table class="inputs-table">
            <tr>
                <td><label for="title">Title:</label></td>
                <td>
                    <input type="text"
                            name="title"
                            id="title"
                            maxlength="50"
                            size="31"
                            value="@Model.Title"
                            placeholder="Max: 50 symbols">
                </td>
            </tr>
            <tr>
                <td><label for="description">Description: </label></td>
                <td>
                    <textarea name="description"
                                id="description"
                                maxlength="250"
                                cols="30"
                                rows="10"
                                placeholder="Max: 250 symbols"
                                style="resize: none;">@Model.Description</textarea>
                </td>
            </tr>
        </table>

        <input type="submit" value="Confirm" />

    </div>

}
