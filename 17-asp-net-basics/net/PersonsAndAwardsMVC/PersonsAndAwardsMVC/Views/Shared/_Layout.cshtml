<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonsAndAwardsMVC</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/table.css" />
    <link rel="stylesheet" href="~/css/table persons.css" />
    <link rel="stylesheet" href="~/css/table awards.css" />
    <link rel="stylesheet" href="~/css/add.css" />
    <link rel="stylesheet" href="~/css/add person.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    @*<script src="jquery-3.5.1.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <h1>Persons and Awards ASP.NET (MVC) Study Project</h1>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Persons">Persons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Awards">Awards</a>
                    </li>
                </ul>
            </div>

            <hr>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        $().ready(function () {
            $('#addAward').click(function () {
                return !$('#allAvailableAwards option:selected').remove().appendTo('#personAwards');
            });
            //$('#remove').click(function ()
            //{
            //    return !$('#select2 option:selected').remove().appendTo('#select1');
            //});
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
